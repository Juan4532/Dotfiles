reload
super + alt + r
        pkill -USR1 -x sxhkd

super + shift + r
        bspc wm -r

#tilix
super + Return
	tilix

super + ctrl + {h,j,k,l}
        bspc node -p {west,south,north,east}

super + ctrl + {1-9}
        bspc node -o 0.{1-9}

super + ctrl + space
        bspc node -p cancel

#rofi
super + d
	/home/juan/.config/polybar/scripts/launcher-alt

super + shift + d
	rofi -show window -show-icons




super + g
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command "{cmd}"

#lock
super + z
        i3lock-fancy

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
        bspc {desktop -f,node -d} '^{1-9,10}'

# close and kill
super + {_,shift + }q
        bspc node -{c,k}

#exit and menu
super + Escape 
	/home/juan/.config/polybar/scripts/powermenu-alt

super + shift + Escape
        bspc quit

#MODES                                                                                          
super + {t,shift + t,s,f}                                                                                       
        bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#WINDOWS                                                                         
super + {_,shift + }{h,j,k,l}                                                                                   
	bspc node -{f,s} {west,south,north,east} 

#super + alt + {h,j,k,l}
        bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

#super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

ctrl + alt + {h,j,k,l}                                                                               
        bspc node -v {-20 0,0 20,0 -20,20 0}                                                               

super + alt + {h,j,k,l}
	/home/juan/.config/bspwm/scrips/bspwm_resize.sh {west,south,north,east}


super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


#shortcuts
super + g
	gpaste

#capturas
super + c 
	scrot '%Y-%m-%d_$wx$h.png' -e 'mv $f ~/screenshots/'
super + v
	scrot -s '%Y-%m-%d_$wx$h.png' -e 'mv $f ~/screenshots/'
super + x 
	scrot -u '%Y-%m-%d_$wx$h.png' -e 'mv $f ~/screenshots/'

#wifi
super + w
	tilix -e nmtui

#teclado
super + e
	setxkbmap -layout es

super + u
	setxkbmap -layout us

#brillo 
super + b
	xrandr --output eDP-2 --brightness 0.5
	xrandr --output eDP-1 --brightness 0.5
super + shift + b
        xrandr --output eDP-2 --brightness 1

#Obsidian
super + o
	/home/juan/Appimages/Obsidian-0.11.9.AppImage

